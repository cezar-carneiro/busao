<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0.5dp"
    android:background="#FFF"
    android:orientation="horizontal"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:gravity="center"
    android:weightSum="1.0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lineCodeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="888"
            android:textColor="#0095ff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text=" - "
            android:textColor="@color/colorAccent"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/lineDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:minLines="2"
            android:maxLines="2"
            android:text="Street Name salve o vila nova tetracampeÃ£o"
            android:textColor="@color/colorAccent"
            android:textSize="18dp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/favoriteLineImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_favorite_border" />

        <ImageView
            android:id="@+id/showLineOnMapImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_google_maps" />

    </LinearLayout>

</LinearLayout>

